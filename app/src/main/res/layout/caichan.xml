<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff"
    android:orientation="vertical">

        <RelativeLayout
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <ImageView
                  android:layout_centerInParent="true"
                android:id="@+id/image1"
                android:layout_alignParentLeft="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_user_property"/>
            <TextView
                android:textSize="12dp"
                android:padding="7dp"
                android:text="我的财产"
                android:layout_toRightOf="@+id/image1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_user_property_money"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="预存款"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_user_property_card"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center" />
                <TextView
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="充值卡"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_user_property_vouchers"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center" />
                <TextView
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="代金券"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_user_property_red"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center" />
                <TextView
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="红包"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_user_property_integral"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center" />
                <TextView
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="积分"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

